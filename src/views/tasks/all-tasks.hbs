<div class="row">
 {{#each tasks}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class=" card-title d-flex justify-content-between align-items-center">{{title}}
         <a href="/tasks/edit/{{_id}}">  <i class="fa fa-pencil"></i></a>
        </h4>
        <p>{{desription}}</p>
        <form action="/tasks/delete/{{_id}}" method="POST">
        <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>